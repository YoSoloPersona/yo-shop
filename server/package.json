{
    "name": "@YoSoloPersona/yo-shop-server",
    "version": "0.1.0",
    "description": "Server of my yo-shop",
    "main": "./dist/index.js",
    "types": "./dist/types",
    "scripts": {
        "build": "tsc",
        "watch": "tsc --watch",
        "development": "concurrently \"npm:watch\" \"npm:start-development\"",

        "lint": "eslint --fix",
        "install-development": "env-cmd -f ./env/development/app.env nodemon ./dist/install.js",

        "start": "node ./dist/index.js",
        "start-development": "nodemon ./dist/index.js",
        "start-development-env": "env-cmd -f ./env/development/app.local.env nodemon ./dist/index.js",

        "docker-compose-local": "docker compose -f ./docker/development/compose.postgres.pgadmin.yaml up -d",
        "docker-compose-development": "docker compose -f ./docker/development/compose.yaml up -d",
        "docker-compose-production": "docker compose -f ./docker/production/compose.yaml up -d",

        "test-docker": "docker-compose -f ./docker/test/docker-compose.yml up --abort-on-container-exit --force-recreate",
        "test-local": "concurrently \"env-cmd -f ./env/development/server.env jasmine --config=./helpers/jasmine.json\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/YoSoloPersona/yo-shop.git"
    },
    "keywords": [
        "online",
        "shop",
        "typescript",
        "react",
        "node",
        "express"
    ],
    "author": "yolik",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/YoSoloPersona/yo-shop/issues"
    },
    "homepage": "https://github.com/YoSoloPersona/yo-shop#readme",
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jasmine": "^4.0.3",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/node": "^18.0.3",
        "@typescript-eslint/eslint-plugin": "^5.30.7",
        "@typescript-eslint/parser": "^5.30.7",
        "concurrently": "^7.4.0",
        "cross-env": "^7.0.3",
        "debug": "^4.3.4",
        "env-cmd": "^10.1.0",
        "eslint": "^8.20.0",
        "jasmine": "^4.2.1",
        "jasmine-reporters": "^2.5.0",
        "nodemon": "^3.0.1",
        "prettier": "^2.7.1",
        "typedoc": "^0.25.3",
        "typescript": "^5.2.2",
        "xunit-viewer": "^10.5.1"
    },
    "dependencies": {
        "@YoSoloPersona/yo-shop-model": "0.1.0",
        "bcrypt": "^5.0.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "i18next-browser-languagedetector": "^6.1.4",
        "i18next-http-backend": "^1.4.1",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.11.3",
        "sequelize": "6.35.0"
    }
}
